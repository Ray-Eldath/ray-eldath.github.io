<%
var pageTitle = page.title || config.subtitle || '';
if (is_archive()) pageTitle = 'Archives';
if (is_tag()) pageTitle = 'Tag: ' + page.tag;
if (is_category()) pageTitle = 'Category: ' + page.category;
if (is_month()) pageTitle += ': ' + page.month + '/' + page.year;
if (is_year()) pageTitle += ': ' + page.year;
pageTitle += ' [ ' + config.title + ' ]';
%>

<!DOCTYPE html>
<html lang="<%= config.language %>">
<head>
    <meta charset="UTF-8">
    <title><%= pageTitle %></title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
    <% if (is_post()) { %>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/prismjs@1.27.0/themes/prism.min.css">
        <link rel="stylesheet"
              href="https://cdn.jsdelivr.net/npm/prismjs@1.27.0/plugins/line-numbers/prism-line-numbers.min.css">
    <% } %>
    <%- css("css/style.css") %>
    <%- css("css/post.css") %>
</head>

<body>
<div id="top">
    <div id="menu-outer">
        <div id="menu-inner">
            <% Object.keys(theme.menu).forEach(key => { %>
                <a href="<%= theme.menu[key] %>"><%= key %></a>
            <% }); %>
        </div>
    </div>

    <div class="container">
        <%- body %>
    </div>

    <div id="bottom-outer">
        <div id="bottom-inner">
            Site by <%= config.author %>.
            <br>
            <a href="<%= config.root %>">Home</a>
        </div>
    </div>
</div>
</body>
</html>
