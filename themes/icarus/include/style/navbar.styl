/* ---------------------------------
 *           Top Navigation
 * --------------------------------- */
$navbar-item-padding-v ?= 1.25rem
$navbar-item-padding-h ?= .75rem
$navbar-item-margin-v ?= 0
$navbar-item-margin-h ?= 0

.navbar-main
    font-size: 1.15em
    font-weight: bold
    border-bottom: 3px solid transparent
    border-image: linear-gradient(90deg, #00C0FF 0%, #FFCF00 49%, #FC4F4F 100%)
    border-image-slice: 2

    .navbar-menu, .navbar-start, .navbar-end
        align-items: stretch
        display: flex
        padding: 0
        flex-shrink: 0
        flex-grow: 0

    .navbar-menu
        overflow-x: auto

    .navbar-start
        justify-content: flex-start
        margin-left: 1em
        margin-right: auto

    .navbar-end
        justify-content: flex-end
        margin-left: 2.5em
        margin-right: auto

    .navbar-item
        display: flex
        align-items: center
        padding: $navbar-item-padding-v $navbar-item-padding-h
        margin: $navbar-item-margin-v $navbar-item-margin-h

        &.is-active
            background-color: transparent

    +until($navbar-breakpoint)
        .navbar-item
            padding: $navbar-item-padding-v $navbar-item-padding-h
            margin: $navbar-item-margin-v $navbar-item-margin-h
        .navbar-menu
            justify-content: center
            box-shadow: none

        .navbar-start
            margin-left: auto

        .navbar-end
            margin-right: auto

.navbar-logo
    img
        max-height: $logo-height